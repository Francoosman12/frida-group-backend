{
    "version": 2,
    "builds": [
      {
        "src": "server.js", 
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/uploads/(.*)",
        "dest": "/uploads/$1"
      },
      {
        "src": "/api/auth/(.*)",
        "dest": "/Controllers/authController.js"
      },
      {
        "src": "/api/products/(.*)",
        "dest": "/Controllers/productController.js"
      },
      {
        "src": "/api/sales/(.*)",
        "dest": "/Controllers/salesController.js"
      },
      {
        "src": "/api/shift/(.*)",
        "dest": "/Controllers/shiftController.js"
      },
      {
        "src": "/api/users/(.*)",
        "dest": "/Controllers/userController.js"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "env": {
      "CLOUDINARY_URL": "@cloudinary-url",
      "DB_URI": "@db-uri",                   
     "JWT_SECRET": "@jwt-secret"                },
    "static": {
      "public": "uploads"    }
  }
  